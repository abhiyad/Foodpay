<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="abs.bigapp.first"
    android:id="@+id/textView2">

    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Eat Now"
        android:id="@+id/but1"
        android:background="@android:color/holo_blue_dark"
        style="@android:style/TextAppearance.Holo.Widget.ActionMode.Title.Inverse"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textmsg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="138dp"
        android:text="0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear my bill"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:onClick="clear"
        android:layout_alignRight="@+id/but1"
        android:layout_alignEnd="@+id/but1"
        android:layout_alignLeft="@+id/but1"
        android:layout_alignStart="@+id/but1"
        android:background="@android:color/holo_green_light" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Current Bill"
        android:id="@+id/textView"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textmsg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp" />

</RelativeLayout>
